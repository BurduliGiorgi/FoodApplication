@model FoodApplication.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
            <form autocomplete="off" method="post" class="m-3 p-3" action="/Account/Register/">
                <div class="mb-3">
                    <h2 style="color: rgb(237, 187, 121)">Register</h2>
                    <span style="color: rgb(237, 187, 121)" class="fst-italic ">Create your account</span>
                </div>
                <div class="mb-3">
                    @Html.ValidationSummary()
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.Name, new {@class="form-control",placeholder="Name"})
                    <label class="form-label" ">Name</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address" })
                    <label class="form-label" ">Address</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                    <label class="form-label">Email</label>
                </div>
                <div class="form-floating mb-3">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
                    <label class="form-label">Password</label>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-sm btn-dark w-100 p-2">Register</button>
                </div>
                </form>
        </div>
    </div>
</div>