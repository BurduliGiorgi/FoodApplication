@model IEnumerable<FoodApplication.Models.Cart>

@{
    ViewData["Title"] = "Cart";
}


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="border-bottom">
                <h4 class="text-dark">Recipe Cart</h4>
                <p class="text-muted fst-italic">@Model.Count() Recipes in Cart</p>
            </div>
        </div>
        <div>
        @foreach (var cart in Model)
        {
            <div class="border-bottom d-flex flex-wrap p-2 ">
                <img src="@cart.Image_url" class="cartImage" />
                    <a href="/Recipe/Order?id=@cart.RecipeId" class="text-decoration-none text-light px-2 CartTitle fw-bold">@cart.Title</a>
                <span onclick="removeCartfromlist('@cart.RecipeId')"
                class="text-danger p-2 fw-bold removeCartBTN">Remove </span>
            </div>
        }
            @if(Model.Count() == 0)
            {
                <div>
                    <i class="fa-solid fa-cart-shopping text-warning emptyCart"></i>
                    <p class="fw-bold fs-4">Your cart in empty</p>
                </div>
            }
        </div>
    </div>
</div>
